@{
    Layout = "~/Views/Shared/_LayoutLoggedOut.cshtml";
    ViewData["title"] = "Rejestracja";
}

<style>
    .login-page {
        color: #fefefe;
    }
</style>

<div class="login-page bg-dark">
    @using(Html.BeginForm("Register", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label for="login">Login</label>
            <input type="text" id="login" name="Name" placeholder="example@email.com" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="password">Hasło</label>
            <input type="password" id="password" name="Password" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="password-repeat">Powtórz hasło</label>
            <input type="password" id="password-repeat" name="PasswordRepeat" class="form-control"/>
        </div>


        <button class="btn btn-primary" type="submit">Zarejestruj</button>
    }
</div>

